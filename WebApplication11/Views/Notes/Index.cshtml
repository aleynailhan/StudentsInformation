@using WebApplication11.Models.EntityFramework;
@model List<tbl_notes>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Note Id</th>
        <th>Öğrenci</th>
        <th>Ders</th>
        <th>Sınav 1</th>
        <th>Sınav 2</th>
        <th>Sınav 3</th>
        <th>Proje</th>
        <th>Ortalama</th>
        <th>Durum</th>
        <th>İşlemler</th>
    </tr>
    <tbody>
        @foreach (var snv in Model)
        {
        <tr>
            <td>@snv.NOTEID</td>
            <td>@snv.STUDENTID</td>
            <td>@snv.LESSONID</td>
            <td>@snv.EXAM1</td>
            <td>@snv.EXAM2</td>
            <td>@snv.EXAM3</td>
            <td>@snv.PROJECT</td>
            <td>@snv.AVERAGE</td>
            <td>@snv.STATUS</td>
            <td>
                <a href="/Notes/Remove/@snv.NOTEID" class="btn btn-danger">Sil</a>
                <a href="/Notes/BringNote/@snv.NOTEID" class="btn btn-success">Güncelle</a>
            </td>
        </tr>
        }
    </tbody>


</table>
<a href="/Notes/NewNote" class="btn btn-info">Yeni Sınav Girişi</a> 
