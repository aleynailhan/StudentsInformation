@using WebApplication11.Models.EntityFramework;
@model List<tbl_clubs>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">

    <tr>
        <th>Kulüp Id</th>
        <th>Kulup Adı</th>
        <th>İşlemler</th>
    </tr>
    <tbody>

        @foreach (var klp in Model)
        {
            <tr>
                <td>@klp.CLUBID</td>
                <td>@klp.CLUBNAME</td>
                <td ><a href="/Clubs/RemoveClub/@klp.CLUBID" class="btn btn-danger">Sil</a>
                <a href="/Clubs/BringClub/@klp.CLUBID" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </tbody>

</table>
<a href="/Clubs/NewClub" class="btn btn-info">Yeni Kulüp Ekle</a>

